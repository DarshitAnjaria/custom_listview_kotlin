<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:id="@+id/etName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Enter Name"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/btnClick"
            android:text="Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/etName"
            android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/etName"/>
    <TextView
            android:text="Name Apperars Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvName" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/btnClick" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnClick"/>
    <Button
            android:text="Introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIntroduce"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnClick" android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@+id/btnClick"/>
    <Button
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNext"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnIntroduce" android:layout_marginStart="11dp"
            app:layout_constraintStart_toEndOf="@+id/btnIntroduce"/>
</android.support.constraint.ConstraintLayout>